<Page x:Class="EMS.Views.SetNotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Set Notification">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Set New Notification" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Input Form -->
        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Notification Type -->
                <TextBlock Text="Type:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <ComboBox x:Name="cboType" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                    <ComboBoxItem Content="Single"/>
                    <ComboBoxItem Content="Ongoing"/>
                </ComboBox>

                <!-- Termination Date (for Single type) -->
                <TextBlock Text="End Date:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <DatePicker x:Name="dpTerminationDate" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

                <!-- Title -->
                <TextBlock Text="Title:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox x:Name="txtTitle" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

                <!-- Description -->
                <TextBlock Text="Description:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top" Margin="0,0,10,10"/>
                <TextBox x:Name="txtDescription" Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" AcceptsReturn="True" 
                         Height="100" Margin="0,0,0,10"/>
            </Grid>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Clear" Width="100" Height="30" Margin="0,0,10,0" Click="BtnClear_Click"/>
            <Button Content="Home" Width="100" Height="30" Margin="0,0,10,0" Click="BtnHome_Click"/>
            <Button Content="Set Notification" Width="120" Height="30" Click="BtnSetNotification_Click"/>
        </StackPanel>

        <!-- Status Message -->
        <TextBlock x:Name="txtStatus" Grid.Row="2" VerticalAlignment="Center" Foreground="Green"/>
    </Grid>
</Page>
