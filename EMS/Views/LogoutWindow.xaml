<Window x:Class="EMS.Views.LogoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Logout" Height="150" Width="300" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Are you sure you want to log out?" 
                   FontSize="16" 
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Yes" Width="80" Margin="10,0" Click="BtnYes_Click"/>
            <Button Content="No" Width="80" Margin="10,0" Click="BtnNo_Click"/>
        </StackPanel>
    </Grid>
</Window>
